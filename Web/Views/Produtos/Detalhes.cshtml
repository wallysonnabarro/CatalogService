@model Web.Models.ProdutoViewModel
@{
    ViewData["Title"] = "Detalhes do Produto";
    Layout = "~/Views/Shared/_LayoutLogado.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-eye me-2"></i>
                            <h4 class="mb-0">Detalhes do Produto</h4>
                        </div>
                        <a asp-action="Index" class="btn btn-light btn-sm">
                            <i class="bi bi-arrow-left me-1"></i>Voltar
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center mb-4">
                            <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" 
                                 style="width: 120px; height: 120px;">
                                <i class="bi bi-box text-white" style="font-size: 3rem;"></i>
                            </div>
                            <h5 class="text-primary">@Model.Nome</h5>
                        </div>
                        
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-sm-6 mb-3">
                                    <label class="form-label fw-bold">
                                        <i class="bi bi-tag me-1"></i>Nome do Produto
                                    </label>
                                    <p class="form-control-plaintext">@Model.Nome</p>
                                </div>
                                
                                <div class="col-sm-6 mb-3">
                                    <label class="form-label fw-bold">
                                        <i class="bi bi-currency-dollar me-1"></i>Valor
                                    </label>
                                    <p class="form-control-plaintext text-success fw-bold fs-5">
                                        R$ @Model.Valor.ToString("N2")
                                    </p>
                                </div>
                                
                                <div class="col-sm-6 mb-3">
                                    <label class="form-label fw-bold">
                                        <i class="bi bi-boxes me-1"></i>Quantidade em Estoque
                                    </label>
                                    <p class="form-control-plaintext">
                                        <span class="badge @(Model.QuantidadeEstoque > 0 ? "bg-success" : "bg-danger") fs-6">
                                            @Model.QuantidadeEstoque unidades
                                        </span>
                                    </p>
                                </div>
                                
                                <div class="col-sm-6 mb-3">
                                    <label class="form-label fw-bold">
                                        <i class="bi bi-toggle-on me-1"></i>Status
                                    </label>
                                    <p class="form-control-plaintext">
                                        <span class="badge @(Model.Status == "Ativo" ? "bg-success" : "bg-secondary") fs-6">
                                            @Model.Status
                                        </span>
                                    </p>
                                </div>
                                
                                <div class="col-sm-6 mb-3">
                                    <label class="form-label fw-bold">
                                        <i class="bi bi-calendar-plus me-1"></i>Data de Criação
                                    </label>
                                    <p class="form-control-plaintext">
                                        @Model.DataCriacao.ToString("dd/MM/yyyy 'às' HH:mm")
                                    </p>
                                </div>
                                
                                <div class="col-sm-6 mb-3">
                                    <label class="form-label fw-bold">
                                        <i class="bi bi-hash me-1"></i>ID do Produto
                                    </label>
                                    <p class="form-control-plaintext">
                                        <code class="text-muted">@Model.Id</code>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Voltar à Lista
                        </a>
                        <div>
                            <a asp-action="Adicionar" class="btn btn-primary me-2">
                                <i class="bi bi-plus-circle me-1"></i>Adicionar Outro
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card de Estatísticas -->
            <div class="card mt-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-graph-up me-2"></i>Informações do Produto
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-4">
                            <div class="border-end">
                                <h5 class="text-primary mb-1">@Model.Valor.ToString("C")</h5>
                                <small class="text-muted">Valor Unitário</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="border-end">
                                <h5 class="text-success mb-1">@Model.QuantidadeEstoque</h5>
                                <small class="text-muted">Em Estoque</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <h5 class="text-info mb-1">@((Model.Valor * Model.QuantidadeEstoque).ToString("C"))</h5>
                            <small class="text-muted">Valor Total</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
