@model Web.Models.ProdutosPaginadosViewModel
@{
    ViewData["Title"] = "Lista de Produtos";
    Layout = "~/Views/Shared/_LayoutLogado.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="bi bi-box-seam me-2"></i>Lista de Produtos</h2>
                <a asp-action="Adicionar" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i>Adicionar Produto
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (Model.Produtos.Any())
            {
                <div class="card">
                    <div class="card-header">
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <h5 class="mb-0">Produtos Cadastrados</h5>
                            </div>
                            <div class="col-md-6 text-end">
                                <small class="text-muted">
                                    Total: @Model.TotalItens produtos
                                </small>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Nome</th>
                                        <th>Valor</th>
                                        <th>Estoque</th>
                                        <th>Status</th>
                                        <th>Data Criação</th>
                                        <th class="text-center">Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var produto in Model.Produtos)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                                        <i class="bi bi-box text-white"></i>
                                                    </div>
                                                    <div>
                                                        <strong>@produto.Nome</strong>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="fw-bold text-success">R$ @produto.Valor.ToString("N2")</span>
                                            </td>
                                            <td>
                                                <span class="badge @(produto.QuantidadeEstoque > 0 ? "bg-success" : "bg-danger")">
                                                    @produto.QuantidadeEstoque unidades
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge @(produto.Status == "Ativo" ? "bg-success" : "bg-secondary")">
                                                    @produto.Status
                                                </span>
                                            </td>
                                            <td>
                                                <small class="text-muted">@produto.DataCriacao.ToString("dd/MM/yyyy HH:mm")</small>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Detalhes" asp-route-id="@produto.Id" 
                                                       class="btn btn-outline-info btn-sm" title="Ver Detalhes">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                @if (Model.TotalPaginas > 1)
                {
                    <nav aria-label="Navegação de páginas" class="mt-4">
                        <ul class="pagination justify-content-center">
                            @if (Model.TemPaginaAnterior)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.PaginaAtual - 1)" asp-route-pageSize="@Model.TamanhoPagina">
                                        <i class="bi bi-chevron-left"></i> Anterior
                                    </a>
                                </li>
                            }

                            @for (int i = Math.Max(1, Model.PaginaAtual - 2); i <= Math.Min(Model.TotalPaginas, Model.PaginaAtual + 2); i++)
                            {
                                <li class="page-item @(i == Model.PaginaAtual ? "active" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-pageSize="@Model.TamanhoPagina">@i</a>
                                </li>
                            }

                            @if (Model.TemProximaPagina)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.PaginaAtual + 1)" asp-route-pageSize="@Model.TamanhoPagina">
                                        Próxima <i class="bi bi-chevron-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="bi bi-box-seam" style="font-size: 4rem; color: #6c757d;"></i>
                    </div>
                    <h4 class="text-muted">Nenhum produto encontrado</h4>
                    <p class="text-muted">Não há produtos cadastrados no sistema.</p>
                    <a asp-action="Adicionar" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-1"></i>Adicionar Primeiro Produto
                    </a>
                </div>
            }
        </div>
    </div>
</div>
