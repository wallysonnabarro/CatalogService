<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Roadmap de Estudos</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="nav-bar-top">
            <button class="toggle-button-top" type="button" onclick="toggleNavbar()" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                @* A imagem será alterada dinamicamente ao clicar no botão *@
                <img class="img" id="toggleIcon" src="~/img/menu.png" alt="Toggle Icon">
            </button>

            <label class="nome-social-centro">Roadmap de Estudos – Microserviços com .NET</label>
        </nav>

        <nav class="sidebar" id="sidebar">
            <button class="toggle-button" type="button" onclick="toggleNavbar()" aria-controls="navbarNav" aria-expanded="false"
                    aria-label="Toggle navigation">
                <img class="img" src="~/img/close.png" alt="Toggle Icon">
            </button>

            <ul class="ul-list">
                <li class="li-list">
                    <a class="a-list" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door me-1"></i>Home
                    </a>
                </li>
                <li class="li-list">
                    <a class="a-list" id="loginBtn" data-bs-toggle="modal" data-bs-target="#loginModal">
                        <i class="bi bi-box-arrow-in-right me-1"></i>Login
                    </a>
                </li>
            </ul>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="container-fluid-body">
        @RenderBody()
    </main>

    <!-- Modal de Login -->
    <div class="modal fade login-modal" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="loginModalLabel">Login</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger" id="loginError" role="alert">
                        Email ou senha incorretos. Por favor, tente novamente.
                    </div>
                    <form id="loginForm" asp-controller="Login" asp-action="login" method="post">
                        <div class="mb-3">
                            <label for="Email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="Email" name="Email" required>
                        </div>
                        <div class="mb-3">
                            <label for="Senha" class="form-label">Senha</label>
                            <input type="password" class="form-control" id="Senha" name="Senha" required>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="RememberMe" name="RememberMe" value="true">
                            <label class="form-check-label" for="RememberMe">
                                Lembrar-me
                            </label>
                        </div>
                        <button type="submit" class="btn btn-primary">Entrar</button>
                    </form>
                    <div class="text-center mt-3">
                        <a asp-area="" asp-controller="Login" asp-action="ForgotPassword" id="forgotPassword">Esqueceu a senha?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function() {
            const urlParams = new URLSearchParams(window.location.search);
            const loginError = urlParams.get('loginError');
            const savedEmail = localStorage.getItem('rememberedEmail');

            if (savedEmail) {
                $('#Email').val(savedEmail);
                $('#RememberMe').prop('checked', true);
            }

            $('#loginForm').on('submit', function () {
                if ($('#RememberMe').is(':checked')) {
                    $('#RememberMe').val('true');
                } else {
                    $('#RememberMe').prop('checked', false);
                    $('#RememberMe').val('false');
                }
            });

            if (loginError) {
                $('#loginError').text(decodeURIComponent(loginError));
                $('#loginError').fadeIn();
                setTimeout(function() {
                    $('#loginError').fadeOut();
                }, 5000);

                $('#loginModal').modal('show');
            }

            function toggleNavbar() {
                const sidebar = document.getElementById('sidebar');
                const toggleIcon = document.getElementById('toggleIcon');

                sidebar.classList.toggle('open');

                const menuIconPath = '/img/menu.png';
                const closeIconPath = '/img/close.png';
                const currentIconPath = toggleIcon.src;

                // Verifica qual ícone está ativo e alterna
                if (currentIconPath.endsWith('menu.png')) {
                    toggleIcon.src = closeIconPath;
                } else {
                    toggleIcon.src = menuIconPath;
                }
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
