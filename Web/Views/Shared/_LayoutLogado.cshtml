<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Roadmap de Estudos</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="nav-bar-top">
            <button class="toggle-button-top" type="button" onclick="toggleNavbar()" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                @* A imagem será alterada dinamicamente ao clicar no botão *@
                <img class="img" id="toggleIcon" src="~/img/menu.png" alt="Toggle Icon">
            </button>

            <label class="nome-social-centro">Roadmap de Estudos – Microserviços com .NET</label>
        </nav>

        <nav class="sidebar" id="sidebar">
            <button class="toggle-button" type="button" onclick="toggleNavbar()" aria-controls="navbarNav" aria-expanded="false"
                    aria-label="Toggle navigation">
                <img class="img" src="~/img/close.png" alt="Toggle Icon">
            </button>

            <ul class="ul-list">
                <li class="li-list">
                    <a class="a-list" asp-area="" asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-house-door me-1"></i>Dashboard
                    </a>
                </li>
                <li class="li-list">
                    <a class="a-list" asp-area="" asp-controller="Produtos" asp-action="Index">
                        <i class="bi bi-box-seam me-1"></i>Produtos
                    </a>
                </li>
                <li class="li-list">
                    <a class="a-list" asp-area="" asp-controller="Ordens" asp-action="Index">
                        <i class="bi bi-cart-plus me-1"></i>Gerar Ordem
                    </a>
                </li>
                <li class="li-list">
                    <a class="a-list" asp-area="" asp-controller="Dashboard" asp-action="Sair">
                        <i class="bi bi-house-door me-1"></i>Sair
                    </a>
                </li>
            </ul>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="container-fluid-body">
        @RenderBody()
    </main>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function() {
            
            function toggleNavbar() {
                const sidebar = document.getElementById('sidebar');
                const toggleIcon = document.getElementById('toggleIcon');

                sidebar.classList.toggle('open');

                const menuIconPath = '/img/menu.png';
                const closeIconPath = '/img/close.png';
                const currentIconPath = toggleIcon.src;

                // Verifica qual ícone está ativo e alterna
                if (currentIconPath.endsWith('menu.png')) {
                    toggleIcon.src = closeIconPath;
                } else {
                    toggleIcon.src = menuIconPath;
                }
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
