@model Web.Models.OrdensPaginadasViewModel
@{
    ViewData["Title"] = "Lista de Ordens de Serviço";
    Layout = "~/Views/Shared/_LayoutLogado.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="bi bi-list-ul me-2"></i>Lista de Ordens de Serviço</h2>
                <a asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i>Nova Ordem
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (Model.Ordens.Any())
            {
                <div class="card">
                    <div class="card-header">
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <h5 class="mb-0">Ordens de Serviço</h5>
                            </div>
                            <div class="col-md-6 text-end">
                                <small class="text-muted">
                                    Total: @Model.TotalItens ordens
                                </small>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Data/Hora</th>
                                        <th>Status</th>
                                        <th>Produtos</th>
                                        <th>Total</th>
                                        <th class="text-center">Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ordem in Model.Ordens)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                                        <i class="bi bi-receipt text-white"></i>
                                                    </div>
                                                    <div>
                                                        <small class="text-muted">@ordem.Id.ToString().Substring(0, 8)...</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div>
                                                    <strong>@ordem.DataHoraRegistro.ToString("dd/MM/yyyy")</strong>
                                                    <br>
                                                    <small class="text-muted">@ordem.DataHoraRegistro.ToString("HH:mm:ss")</small>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge @(ordem.Status == "Aberta" ? "bg-success" : ordem.Status == "Fechada" ? "bg-primary" : "bg-warning")">
                                                    @ordem.Status
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">
                                                    @ordem.QuantidadeProdutos produto(s)
                                                </span>
                                            </td>
                                            <td>
                                                <span class="fw-bold text-success">R$ @ordem.Total.ToString("N2")</span>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Detalhes" asp-route-id="@ordem.Id" 
                                                       class="btn btn-outline-info btn-sm" title="Ver Detalhes">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                @if (Model.TotalPaginas > 1)
                {
                    <nav aria-label="Navegação de páginas" class="mt-4">
                        <ul class="pagination justify-content-center">
                            @if (Model.TemPaginaAnterior)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Listar" asp-route-page="@(Model.PaginaAtual - 1)" asp-route-pageSize="@Model.TamanhoPagina">
                                        <i class="bi bi-chevron-left"></i> Anterior
                                    </a>
                                </li>
                            }

                            @for (int i = Math.Max(1, Model.PaginaAtual - 2); i <= Math.Min(Model.TotalPaginas, Model.PaginaAtual + 2); i++)
                            {
                                <li class="page-item @(i == Model.PaginaAtual ? "active" : "")">
                                    <a class="page-link" asp-action="Listar" asp-route-page="@i" asp-route-pageSize="@Model.TamanhoPagina">@i</a>
                                </li>
                            }

                            @if (Model.TemProximaPagina)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Listar" asp-route-page="@(Model.PaginaAtual + 1)" asp-route-pageSize="@Model.TamanhoPagina">
                                        Próxima <i class="bi bi-chevron-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="bi bi-list-ul" style="font-size: 4rem; color: #6c757d;"></i>
                    </div>
                    <h4 class="text-muted">Nenhuma ordem encontrada</h4>
                    <p class="text-muted">Não há ordens de serviço cadastradas no sistema.</p>
                    <a asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-1"></i>Criar Primeira Ordem
                    </a>
                </div>
            }
        </div>
    </div>
</div>