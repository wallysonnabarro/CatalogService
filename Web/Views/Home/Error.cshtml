@model ErrorViewModel
@{
    ViewData["Title"] = "Erro";
}

<div class="error-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="error-card">
                    <div class="error-header">
                        <div class="error-icon">
                            <span class="icon">⚠️</span>
                        </div>
                        <h1 class="error-title">Ops! Algo deu errado</h1>
                        <p class="error-subtitle">
                            Ocorreu um erro inesperado durante o processamento da sua solicitação.
                        </p>
                    </div>

                    <div class="error-content">
                        @if (Model.ShowErrorMessage)
                        {
                            <div class="error-message">
                                <h3>Detalhes do Erro:</h3>
                                <p class="error-text">@Model.ErrorMessage</p>
                            </div>
                        }

                        <div class="error-details">
                            <h3>Informações Técnicas:</h3>
                            <div class="detail-grid">
                                @if (Model.ShowCorrelationId)
                                {
                                    <div class="detail-item">
                                        <span class="detail-label">Correlation ID:</span>
                                        <span class="detail-value">@Model.CorrelationId</span>
                                    </div>
                                }
                                
                                @if (Model.ShowRequestId)
                                {
                                    <div class="detail-item">
                                        <span class="detail-label">Request ID:</span>
                                        <span class="detail-value">@Model.RequestId</span>
                                    </div>
                                }
                                
                                @if (Model.ShowErrorCode)
                                {
                                    <div class="detail-item">
                                        <span class="detail-label">Código do Erro:</span>
                                        <span class="detail-value">@Model.ErrorCode</span>
                                    </div>
                                }
                                
                                <div class="detail-item">
                                    <span class="detail-label">Timestamp:</span>
                                    <span class="detail-value">@Model.Timestamp.ToString("dd/MM/yyyy HH:mm:ss") UTC</span>
                                </div>
                            </div>
                        </div>

                        <div class="error-actions">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                                <span class="btn-icon">🏠</span>
                                Voltar ao Início
                            </a>
                            <button onclick="history.back()" class="btn btn-secondary">
                                <span class="btn-icon">⬅️</span>
                                Página Anterior
                            </button>
                        </div>

                        <div class="error-help">
                            <h4>Precisa de ajuda?</h4>
                            <p>
                                Se o problema persistir, entre em contato com o suporte técnico fornecendo 
                                as informações técnicas acima.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


